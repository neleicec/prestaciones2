<?xml version="1.0"?>

<odoo>
	<data>
		

	<!-- Vista de Arbol -->
		<record id="prest_view_anticipo_tree" model="ir.ui.view">
			<field name="name">anticipo_por_prestaciones</field>
			<field name="model">anticipo</field>
			<field name="arch" type="xml">
				<tree string="Anticipo">
					<field name="name"></field>
					<field name="tipo"></field>
				</tree>
			</field>
		</record>

	<!-- Vista de Formulario -->
		<record id="prest_view_anticipo" model="ir.ui.view">
			<field name="name">anticipos</field>
			<field name="model">anticipo</field>
			<field name="arch" type="xml">
				<form>
					<header>
						<button name="action_topay" string="Por Pagar" states="topay,paid,cancel" type="object"/>
						<button name="button_paid" string="Pagado" states="paid" class="oe_highlight" type="object"/>
            			<button name="button_cancel" string="Cancelar" type="object" states="cancel"/>

						<field name="state" widget="statusbar" statusbar_visible="topay,paid,cancel"/>
        			</header>
					<sheet>
						<group string="Datos para el Anticipo">
							<group>
								<field name="name"></field>
								<field name="tipo" widget='radio'></field>
								<field name="fecha_actual"/>
							</group>
							<group>
								<field name="metodo_de_pago" widget='radio'/>
								<field name="acumulado"/>
								<field name="monto_anticipo"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
	</data>
</odoo>