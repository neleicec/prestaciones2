<?xml version="1.0"?>

<odoo>
    <data>
        <report id = "report_anticipo"
                string = "Reporte de Anticipos"
                model = "anticipo"
                report_type = "qweb-pdf"
                name = "prestsoc1.report_anticipo_template"
        />
        <template id = "report_anticipo_template">
            <t t-call = "report.html_container">
                <t t-call = "report.external_layout">
                    <t t-foreach="docs" t-as="o">
                   
                        <div class = "page">
                        <table class="table table-bordered">
                            <tr>
                                <td>Name</td>
                                <td><span t-field="o.name"/></td>
                            </tr>
                            
                            <tr>
                                <td>Pago por Prestaciones</td>
                                <td><span t-field="o.total_pagar_anos_servicios"/></td>
                            </tr>
                             <tr>
                                <td>Intereses</td>
                                <td><span t-field="o.total_intereses"/></td>
                            </tr>
                             <tr>
                                <td>Doblete</td>
                                <td><span t-field="o.doblete"/></td>
                            </tr>
                             <tr>
                                <td>Total a Pagar</td>
                                <td><span t-field="o.total_liquidar"/></td>
                            </tr>
                        </table>
                        </div>
                        <div class = "footer">
                            <small> Mi footer </small>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>