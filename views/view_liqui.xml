<?xml version="1.0"?>

<odoo>
	<data>


	<!-- Vista de Arbol -->
		<record id="prest_view_liqui_tree" model="ir.ui.view">
			<field name="name">prestac</field>
			<field name="model">presta</field>
			<field name="arch" type="xml">
				<tree string="Liquida">
					<field name="name"></field>
					<field name="fecha_ingreso"></field>
				</tree>
			</field>
		</record>

	<!-- Vista de Formulario -->
		<record id="prest_view_liqui" model="ir.ui.view">
			<field name="name">prest3</field>
			<field name="model">presta</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<group string="Datos para el Informe de LiquidaciÃ³n">
								<field name="name"></field>
								<field name="fecha_ingreso"></field>
								<field name="fecha_actual"></field>
								<field name="contiene_doblete"/>
								<field name="meses_trabajados_despues_del_ano"/>
								<field name="dias_trabajados_luego_de_liquidacion"/>
							</group>
							<group string= "Datos de las Prestaciones">
								<field name="acumuladoPrestaciones"></field>
								<field name="acumuladoAdicional"/>
								<field name= "doblete"/>
							</group>
							<group string= "Total a cancelar por Liquidaciones"> 
								<field name= "anticipo_acumulado"/>
								<field name= "total_liquidar"/>
								<field name= "salarioIntegral" invisible ="1"/>
							</group>
							<group string= "Elegir Metodo">
								<field name= "elegir_metodo" widget='radio'/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
	</data>
</odoo>