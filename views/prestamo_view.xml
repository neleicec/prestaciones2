<?xml version="1.0"?>

<odoo>
	<data>


	<!-- Vista de Arbol -->
		<record id="prest_view_prestamo_tree" model="ir.ui.view">
			<field name="name">prestamo_por_prestaciones</field>
			<field name="model">prestamo</field>
			<field name="arch" type="xml">
				<tree string="Prestamo">
					<field name="name"></field>
					<field name="monto_prestamo"></field>
				</tree>
			</field>
		</record>

	<!-- Vista de Formulario -->
		<record id="prest_view_prestamo" model="ir.ui.view">
			<field name="name">prestamos</field>
			<field name="model">prestamo</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group string="Datos del Empleado">
							<group>
								<field name="name"></field>
								<field name="fecha_actual"/>
							</group>
							<group>
								<field name="metodo_pago" widget='radio'/>
								<field name="monto_maximo"/>
							</group>
							<group string="Datos para el Prestamo">
								<field name="monto_prestamo"/>
								<field name="cuotas"/>
								<field name="fecha_cobro"/>
							</group>
								
							<group string="A Cancelar">
								<field name="monto"/>
								<field name="cuotas_cancelada"/>
								<field name="fecha_cancelada"/>
							</group>
							<group>
							</group>
							<group>
								<field name="monto_cancelado"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
	</data>
</odoo>