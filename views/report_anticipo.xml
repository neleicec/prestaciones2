<?xml version="1.0"?>

<odoo>
    <data>
        <report id = "report_anticipo"
                string = "Reporte de Anticipo"
                model = "anticipo"
                report_type = "qweb-pdf"
                name = "prestsoc1.report_anticipo_template"
        />
        <template id = "report_anticipo_template">
            <t t-call = "report.html_container">
                <t t-call = "report.external_layout">
                    <t t-foreach="docs" t-as="o">
                   
                        <div class = "page">
                        <table class="table table-bordered">
                            <tr>
                                <td>Name</td>
                                <td><span t-field="o.name"/></td>
                            </tr>
                            
                            <tr>
                                <td>Pagado en</td>
                                <td><span t-field="o.metodo_de_pago"/></td>
                            </tr>
                            <tr>
                                <td>Fecha</td>
                                <td><span t-field="o.fecha_actual"/></td>
                            </tr>
                             <tr>
                                <td>Tipo del Anticipo</td>
                                <td><span t-field="o.tipo"/></td>
                                <td></td>
                                <td>Anticipo Solicitado</td>
                                <td><span t-field="o.monto_anticipo"/></td>
                            </tr>
                        </table>
                        </div>
                        <div class = "footer">
                            <small> Mi footer </small>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>